@page
@inject InMemoryDatabase database;

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <p>
        <b>Last Retrieval</b><br/>
        @database.LastRetrieval.ToString("G")
    </p>
    <p>
        <b>Current WAN Ip Address</b><br/>
        @database.CurrentIpAddress ?? "Unknown"
    </p>
    <p>
        <b>Current DNS Ip Address</b>
        @database.InDnsZone ?? "Unknown"
    </p>
</div>