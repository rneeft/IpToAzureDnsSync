@page
@inject IState State;

<div class="text-start m-1">
    <form>
        <fieldset disabled>
            <legend>My IP Stats</legend>
            <div class="mb-3">
                <label for="LastRetrieval" class="form-label">Last Retrieval</label>
                <input type="text" id="LastRetrieval" class="form-control" value="@State.LastRetrieval?.ToString("G")" >
            </div>
            <div class="mb-3">
                <label for="NextRetrieval" class="form-label">Next Retrieval</label>
                <input type="text" id="NextRetrieval" class="form-control" value="@State.NextRetrieval?.ToString("G")" >
            </div>
            <div class="mb-3">
                <label for="currentWANIp" class="form-label">Current WAN Ip Address</label>
                <input type="text" id="currentWANIp" class="form-control" value="@State.CurrentIpAddress">
            </div>
            <div class="mb-3">
                <label for="previousIps" class="form-label">Previous IP Addresses</label>
                <ul class="list-group" id="previousIps">
                    @foreach (var ip in State.UsedIpAddresses)
                    {
                    <li class="list-group-item">@ip</li>
                    }
                </ul>
            </div>
        </fieldset>
    </form>

</div>